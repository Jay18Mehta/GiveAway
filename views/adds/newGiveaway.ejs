<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Add Give Away</h1>
    <div class="col-6 offset-3">
        <form action="/index/newGiveaway" method="post" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="category">Category</label>
                <input class="form-control" type="text" id="category" name="giveaway[category]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="productName">Product Name</label>
                <input class="form-control" type="text" id="productName" name="giveaway[productName]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="giveaway[description]"
                    required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <div class="form-file custom-file">
                    <input type="file" class="form-file-input" id="image" name="giveaway[image]" required>
                    <label class="form-file-label" for="image">
                        <span class="form-file-text custom-file-label">Choose image...</span>
                        <span class="form-file-button">Browse</span>
                    </label>
                </div>
            </div>
            <div class="mb-3">
                <div class="mb-3">
                    <label class="form-label" for="city">City Name</label>
                    <input class="form-control" type="text" id="city" name="giveaway[city]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="state">State Name</label>
                    <input class="form-control" type="text" id="state" name="giveaway[state]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add Give Away</button>
            </div>
        </form>
        <a href="/index">Back to index</a>
    </div>
</div>
<script src="/javascripts/validateForms.js"></script>
