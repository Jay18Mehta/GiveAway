<% layout('layouts/boilerplate')%>
<style>
    img{
     max-width: 255px;
     max-height: 255px;
    }
</style>
    <div class="container overflow-hidden text-center">
        <div class="row gx-5">
            <div class="col">
            <h2>Giving Away</h2>
                    
                        <% for(let giveaway of giveaways){ %>
                            <% if(currentUser._id.toString() == giveaway.author._id.toString()) {%>
                            <div class="card text-center" mb-3>
                                <div class="row my-4">
                                    <div class="col-md-4">
                                        <img src="<%=giveaway.image.url%>" class="card-image-top" alt="...">
                                    </div>
                                    <div class="col-md-8">
                                        <div class="card-body">
                                            <h5 class="card-title"><%= giveaway.productName %> </h5>
                                            <p class="card-text"><%= giveaway.description %></p>
                                            <a class="btn btn-primary" href="/index/giveaway/<%=giveaway._id%>">View</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                        <% } %>
                    </div>
                    <div class="col">    
            <h2>Looking For</h2>
            
                <% for(let lookingfor of lookingfors){ %>
                    <% if(currentUser._id.toString() == lookingfor.author._id.toString()) {%>
                    <div class="card text-center" mb-3>
                        <div class="row  my-4">
                            <div class="col-md-4">
                                <img src="<%=lookingfor.image.url%>" class="card-image-top" alt="...">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title"><%= lookingfor.productName %> </h5>
                                    <p class="card-text"><%= lookingfor.description %></p>
                                    <a class="btn btn-primary" href="/index/lookingfor/<%=lookingfor._id%>">View</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% } %>
                <% } %>
            </div> 
        </div>
    </div>
